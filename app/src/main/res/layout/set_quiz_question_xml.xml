<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:background="#00ff99"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="set_background1"
        android:paddingLeft="50dp"
        android:text="enter the question"
        android:textColor="#ffffff"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:background="#00ff99"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="set_background2"
        android:paddingLeft="50dp"
        android:text="option 1"
        android:textColor="#ffffff"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:background="#00ff99"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="set_background3"
        android:paddingLeft="50dp"
        android:text="option 2"
        android:textColor="#ffffff"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:background="#00ff99"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="set_background4"
        android:paddingLeft="50dp"
        android:text="option 3"
        android:textColor="#ffffff"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:background="#00ff99"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="set_background5"
        android:paddingLeft="50dp"
        android:text="option 4"
        android:textColor="#ffffff"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7"
        app:layout_constraintVertical_bias="0.416"
        android:onClick="send_to_firebase"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="56dp"
        android:text="ENTER THE 1 QUESTION  BELOW"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/button6"
        android:layout_width="107dp"
        android:layout_height="64dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7"
        app:layout_constraintVertical_bias="0.416"

        android:onClick="submit_to_firebase"
        />


</androidx.constraintlayout.widget.ConstraintLayout>